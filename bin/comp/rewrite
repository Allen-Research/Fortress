# Minor special-case acceleration here.
if [ -z "$FORTRESS_HOME" ]; then
   export FORTRESS_HOME="`${0%rewrite}fortress_home`"
fi

if [ -z "$MORE_PATH" ] ; then
  true
else
  CP="${CP}:${MORE_PATH}"
fi

CP="`"$FORTRESS_HOME"/bin/run_classpath`"
# echo $CP
if [ -z "$JAVA_HOME" ] ; then
  JAVACMD=java
else
  JAVACMD="$JAVA_HOME/bin/java"
fi

if [ -z "$JAVA_FLAGS" ] ; then
  JAVA_FLAGS="-Xmx768m"
fi

JAVA_FLAGS+=" -Dfile.encoding=UTF-8 -Xfuture"

#echo "$JAVACMD" $JAVA_FLAGS -cp "$CP" com.sun.fortress.linker.Link "$@"

"$JAVACMD" $JAVA_FLAGS -cp "$CP" com.sun.fortress.linker.Linker "$@"